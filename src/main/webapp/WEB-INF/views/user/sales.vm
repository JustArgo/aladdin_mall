<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>我的销售</title>
 <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<script src="../js/jquery-2.1.3.min.js"></script>
<link rel="stylesheet" href="css/my-sale.css" type="text/css" />
</head>
<body>
<div id="container">
    <div class="header">
        <a href="personal-index.html" class="header-back btn">
			<img class="img1" src="images/back_n.png">
			<img class="img2" src="images/back_p.png">
		</a>
        <span>我的销售</span>
    </div>
	<div class="header-menu">
		<ul>
			<li><a href="javascript:" class="menu-btn" id="mySale">我的销售(100)</a></li>
			<li><a href="javascript:" class="menu-btn" id="memberSale">会员销售(258)</a></li>
		</ul>
	</div>
	<div class="sale-area1">
		#foreach( $item in $sales) 
		<div class="sale-list">
			<div class="sale-1">
				<p style="font-size:14px;color:#232323;">订单金额：<span style="color:#E81959">￥$item.psum</span></p>
				<p>佣金：<span>￥$item.reward</span></p>
			</div>
			<div class="sale-2">
				<p>$item.createtime</p>
				<p style="position:absolute;right:13px;color:#666;">交易成功</p>
			</div>
		</div>
		#end
	</div>
	<div class="sale-area2">
		#foreach( $item in $memberSales) 
		<div class="sale-list">
			<div class="sale-head">
				<div class="head-img">
					<img src="images/head_portrait.png" />
				</div>
				小龙女
			</div>
			<div class="sale-1">
				<p style="font-size:14px;color:#232323;">订单金额：<span style="color:#E81959">￥$item.psum</span></p>
				<p>佣金：<span>￥$item.reward</span></p>
			</div>
			<div class="sale-2">
				<p>$item.createtime</span></p>
				<p style="position:absolute;right:13px;color:#666;">交易成功</p>
			</div>
		</div>
		#end
	</div>
</div>
</body>
<script>
    $(function(){
		$(".btn").click(function(){
			if($(this).find(".img1").is(":visible")){
				$(this).find(".img1").hide();
				$(this).find(".img2").show();
			}else{
				$(this).find(".img1").show();
				$(this).find(".img2").hide();
			}
		});
		$("#mySale").click(function(){
			$(".sale-area1").show();
			$(".sale-area2").hide();
			$("#memberSale").css({"color":"#666"});
			$(this).css({"color":"#E81959"});	
		});
		$("#memberSale").click(function(){
			$(".sale-area1").hide();
			$(".sale-area2").show();
			$("#mySale").css({"color":"#666"});
			$(this).css({"color":"#E81959"});	
		});
	});
</script>
</html>
 
