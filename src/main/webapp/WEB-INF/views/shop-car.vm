
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>购物车</title>
 <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<script src="js/jquery-2.1.3.min.js"></script>
<link rel="stylesheet" href="css/mall.css" type="text/css" />
<link rel="stylesheet" href="css/shop-car.css" type="text/css" />
</head>
<!-- 
批量删除功能 -216-3-10
-->
<body>
	<div id="container">
    <div class="header">
        <a href="index.html" class="header-back btn">
			<img class="img1" src="images/classfiy/back_n.png">
			<img class="img2" src="images/classfiy/back_p.png">
		</a>
        <span>购物车</span>
		<a href="javascript:" id="edit">
			<img src="images/img/edit_n.png" />
			<!-- <img class="img2" src="images/img/edit_p.png" style="display:none" /> -->
		</a>
		<a href="javascript:" id="edit2">删除</a>
    </div>
    <form id="shopcarForm" action="${link.contextPath}/settle" type="POST">
    #foreach($m in $supplierProducts)
	<div class="car-content">
		
		<div class="bottom-title">供应商：$m.supName</div>
		#foreach($shopCarProducts in $m.shopCarProducts)
		<div class="info-bottom" data-id="$shopCarProducts.skuID">
			<input type="hidden" name="skuIDs" value="${shopCarProducts.skuID}"/>
			<input type="hidden" name="buyNums" value="${shopCarProducts.skuQuality}"/>
			<input type="hidden" name="skuPrices" value="${shopCarProducts.skuPrice}"/>
			<div class="car-select">
				<a href="javascript:void(0);" class="btn option">
					<img class="img1 option-img1" src="images/img/select_n.png" />
					<img class="img2 option-img2" src="images/img/select_p.png" />
				</a>
			</div>
			<div class="info-bottom-img">
				<a href="#"><img src="${shopCarProducts.imgPath}" /></a>
			</div>
			<p class="bottom-1" style="font-size:14px;">$shopCarProducts.sellDesc</p>
			<p class="bottom-2">
				<!-- 如果没有skuStr 需要加个空格占一行 -->
				#if($shopCarProducts.skuStrs.isEmpty())<span>&nbsp;</span>#end
				#foreach($skuStr in $shopCarProducts.skuStrs)<span>$skuStr</span>&nbsp;#end
			</p>
			<p class="bottom-3">
				<span style="color:#F389AA;font-size:14px;" class="product_price">￥$shopCarProducts.skuPrice</span>
				<div class="bottom-number">
					<div class="number-1">
						<a href="javascript:void(0);" class="subtract">
							<img class="img1" src="images/img/subtract_n.png" />
							<img class="img2" src="images/img/subtract_p.png" />
						</a>
					</div>
					<div class="number-2">$shopCarProducts.skuQuality</div>
					<div class="number-1">
						<a href="javascript:void(0);" class="add">
							<img class="img1" src="images/img/add_n.png" />
							<img class="img2" src="images/img/add_p.png" />
						</a>
					</div>
				</div>
			</p>
		</div>
		#end
		<div class="botton-delete" >
			<a href="#" class="btn delete" > 
				<img class="img1 option-img" src="images/img/delete_n.png" />
				<img class="img2" src="images/img/delete_p.png" />
			</a>
		</div>
	</div>
	#end
	</form>
	
	<div class="car-footer">
		<div class="car-footer-1">
			<a href="javascript:" id="selectAll">
				<img class="img1 option-img1" src="images/img/select_n.png" />
				<img class="img2 option-img2" src="images/img/select_p.png" />
				<span class="optionAll">全选</span>
			</a>
		</div>
		<div class="car-footer-2">合计：￥0</div>
		<div class="car-footer-1">
			<a href="javascript:void(0);" style="color:#fff;" class="placeOrder">结算(0)</a>
		</div>
	</div>
</div>
</body>
<script>
    $(function(){
		$(".btn").click(function(){
			if($(this).find(".img1").is(":visible")){
				$(this).find(".img1").hide();
				$(this).find(".img2").show();
			}else{
				$(this).find(".img1").show();
				$(this).find(".img2").hide();
			}
		});
		
		$(".option").click(function(){
			var pattern = new RegExp("[0-9]+");
			var choosedNum = parseInt(pattern.exec($(".car-footer div:eq(2)").find("a").text()));
			
			var info_bottom = $(this).closest(".info-bottom");
			var price  =  pattern.exec(info_bottom.find(".product_price").text());
			var buyNum =  info_bottom.find(".number-2").text();
			
			if($(this).find(".img1").is(":visible")){
				//减少数量
				$(".car-footer div:eq(2)").find("a").text("结算("+(choosedNum-1)+")");
				//减少合计
				var newTotalPrice = parseInt(pattern.exec($(".car-footer-2").text()))-parseInt(price)*parseInt(buyNum);
				$(".car-footer-2").text("合计：￥"+newTotalPrice);
				
			}else{
				//增加数量
				$(".car-footer div:eq(2)").find("a").text("结算("+(choosedNum+1)+")");
				//增加合计
				var newTotalPrice = parseInt(pattern.exec($(".car-footer-2").text()))+parseInt(price)*parseInt(buyNum);
				$(".car-footer-2").text("合计：￥"+newTotalPrice);
				
			}
		});
		
		$(".subtract").each(function(){
			$(this).click(function(){
				
				var info_bottom = $(this).closest(".info-bottom");
				
				var divTxt = $(this).parents(".number-1").siblings(".number-2");
				num = divTxt.text();
				if(num < 2){
					alert("数量已经最少")
				}else{
					num--;
					if(info_bottom.find(".option .img2").is(":visible")){
						//改变总价
						var pattern = new RegExp("[0-9]+");
						var price = pattern.exec(info_bottom.find(".product_price").text());
						var newPrice = parseInt(pattern.exec($(".car-footer-2").text())[0])-parseInt(price);
						$(".car-footer-2").text("合计：￥"+newPrice);
					}
					console.log(num);
					//改变input的内容
					$(this).closest(".info-bottom").find("input:eq(1)").val(num);
				}
				divTxt.text(num);
				$(".add").find(".img1").show();
				$(".add").find(".img2").hide();
				$(this).find(".img1").hide();
				$(this).find(".img2").show();
			})
		});
		$(".add").each(function(){
			$(this).click(function(){
				var divTxt = $(this).parents(".number-1").siblings(".number-2");
				num = divTxt.text();
				num++;
				divTxt.text(num);
				$(".subtract").find(".img1").show();
				$(".subtract").find(".img2").hide();
				$(this).find(".img1").hide();
				$(this).find(".img2").show();
				
				var info_bottom = $(this).closest(".info-bottom");
				
				if(info_bottom.find(".option").find(".img2").is(":visible")){
					//改变总价
					var pattern = new RegExp("[0-9]+");
					var price = pattern.exec(info_bottom.find(".product_price").text());
					console.log("该sku价格::"+price);
					var newPrice = parseInt(pattern.exec($(".car-footer-2").text())[0])+parseInt(price);
					$(".car-footer-2").text("合计：￥"+newPrice);
					
				}
				//改变input的内容
				console.log(num);
				$(this).closest(".info-bottom").find("input:eq(1)").val(num);
				
			})
		});
		
		
		$("#edit").click(function(){
				$("#edit").hide();
				$("#edit2").show();
				$(".botton-delete").show();
		});
		$("#edit2").click(function(){
			if($(".car-content").find(".car-select").find(".img2").is(":visible")){
				if(confirm('确定要批量删除商品吗?')){
					var skuIDs = [];
					var minusPrice = 0;
					var pattern = new RegExp("[0-9]+");
					
					$(".info-bottom").each(function(index,item){
						if($(this).find(".option .img2").is(":visible")){
							skuIDs.push($(this).data("id"));
						}
					});
					
					$.ajax({
						url:'${link.contextPath}/remove_shopcar_product',
						type:'POST',
						dataType:'JSON',
						data:{"skuIDs":skuIDs},
						traditional:true,
						success:function(ret){
							if(ret.errcode==0){
								console.log("删除成功");
								$(".info-bottom").each(function(index,item){
									
									if($(item).find(".option .img2").is(":visible")){
										skuIDs.push($(this).data("id"));
										
										var price  = parseInt(pattern.exec($(item).find(".product_price").text()));
										var buyNum = parseInt($(item).find(".number-2").text());
										minusPrice += price*buyNum;
										
										var newConclusion = parseInt(pattern.exec($(".car-footer div:eq(2)").find("a").text()))-1;
										$(".car-footer div:eq(2)").find("a").text("结算("+newConclusion+")"); 
										
									}
								});
								console.log("minusPrice:--"+minusPrice);
								var newTotalPrice = parseInt(pattern.exec($(".car-footer-2").text()))-minusPrice;
								$(".car-footer-2").text("合计：￥"+newTotalPrice);
								
								$(".info-bottom").each(function(index,item){
									if($(this).find(".option .img2").is(":visible")){
										//这时再移除 才不会影响钱的计算
										var carContent = $(this).closest(".car-content");
										var skuNum = carContent.find(".info-bottom").length;
										var choosedSkuNum = 0;
										carContent.find(".option").each(function(index,item){
											if($(item).find(".img2").is(":visible")){
												skuIDs.push($(this).closest(".info-bottom").data("id"));
												choosedSkuNum++;
											}
										});
										
										if(skuNum==choosedSkuNum){
											carContent.remove();
										}else{
											$(this).remove();
										}
									}
								});
								
								$("#edit").show();
								$("#edit2").hide();
								$(".botton-delete").hide();
								$(".option-img1").show();
								$(".option-img2").hide();
								$(".optionAll").text("全选");
								
							}
						}
					});
					
				}else{
					$(".img1").show();
					$(".img2").hide();
					$(".option-img1").show();
					$(".option-img2").hide();
					$(".optionAll").text("全选");
					
					$(".car-footer-2").text("合计：￥0");
					$(".car-footer div:eq(2)").find("a").text("结算(0)");
				}
			}else{
				alert("请选择商品");
			}
		});

		$(".delete").click(function(){
			var carContent = $(this).closest(".car-content");
			var skuIDs = [];
			
			//获得此处有几个sku
			var skuNum = carContent.find(".info-bottom").length;
			//获得此处选中几个sku
			var choosedSkuNum = 0;
			carContent.find(".option").each(function(index,item){
				if($(item).find(".img2").is(":visible")){
					skuIDs.push($(this).closest(".info-bottom").data("id"));
					choosedSkuNum++;
				}
			});
			if(choosedSkuNum==0){
				alert("对不起，请先选择删除的商品");
			}else{
				if(confirm('确定要删除该商品吗?')){
					
					//console.log(choosedSkuNum);
					//console.log(skuIDs);
					
					var minusPrice = 0;
					var pattern = new RegExp("[0-9]+");
					
					$.ajax({
						url:'${link.contextPath}/remove_shopcar_product',
						type:'POST',
						dataType:'JSON',
						data:{"skuIDs":skuIDs},
						traditional:true,
						success:function(ret){
							if(ret.errcode==0){
								carContent.find(".info-bottom").each(function(index,item){
									if(skuIDs.indexOf($(this).data("id"))>=0){
										if(skuNum==choosedSkuNum){
											carContent.remove();											
										}else{
											$(this).remove();
										}
										
										//重新计算合计 多少钱 选了才要合计多少钱
										var price = parseInt(pattern.exec($(this).find(".product_price").text()));
										//console.log(price);
										var buyNum = parseInt($(this).find(".number-2").text());
										console.log(price+" "+buyNum);
										
										minusPrice += price*buyNum;
										
									}
								});
								
								//改变合计的 金额
								var newTotalPrice = parseInt(pattern.exec($(".car-footer-2").text()))-minusPrice;
								$(".car-footer-2").text("合计：￥"+newTotalPrice);
								
								//改变结算的数量
								var newConclusion = parseInt(pattern.exec($(".car-footer div:eq(2)").find("a").text()))-choosedSkuNum;
								$(".car-footer div:eq(2)").find("a").text("结算("+newConclusion+")"); 
							}
						}
					});
				}else{
					$(".img1").show();
					$(".img2").hide();
				}
			}
			setTimeout(function () {
				$(".delete").find(".img2").hide();
				$(".delete").find(".img1").show();
			 }, 50);
		});
		
		$("#selectAll").click(function(){
			if($(this).find(".option-img1").is(":visible")){
				var addPrice = 0;
				var pattern = new RegExp("[0-9]+");
				$(".option-img1").hide();
				$(".option-img2").show();
				//改变结算 的数量
				$(".car-footer div:eq(2)").find("a").text("结算("+$(".info-bottom").length+")");
				$(".optionAll").text("取消全选");
				//改变合计的金额
				$(".info-bottom").each(function(index,item){
					var price  = pattern.exec($(this).find(".product_price").text())[0];
					var buyNum = $(this).find(".number-2").text();
					addPrice += parseInt(price)*parseInt(buyNum);
				});
				$(".car-footer-2").text("合计：￥"+addPrice);
				
			}else{
				$(".option-img1").show();
				$(".option-img2").hide();
				//改变结算 的数量
				$(".car-footer div:eq(2)").find("a").text("结算(0)");
				$(".optionAll").text("全选");
				//改变合计的金额
				$(".car-footer-2").text("合计：￥"+0);
			}
			
		});
		
		//点击结算
		$(".placeOrder").click(function(){
			
			var pattern = new RegExp("[0-9]+");
			var choosedNum = parseInt(pattern.exec($(".car-footer div:eq(2)").find("a").text()));
			if(choosedNum==0){
				alert("您还未选择要购买的商品");
			}else{
				$(".info-bottom").each(function(index,item){
					if(!$(this).find(".option .img2").is(":visible")){
						$(this).find("input").remove();
					}
					$("#shopcarForm").submit();
				});
			}
			
		});
		
	});
</script>
</html>
 
